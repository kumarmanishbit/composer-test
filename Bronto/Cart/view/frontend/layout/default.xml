<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceContainer name="page.bottom">
      <block
        class="Bronto\Cart\Block\Capture"
        name="bronto_cart_capture"
        template="Bronto_Cart::capture.phtml" />
      <block
        class="Bronto\Cart\Block\Fiddle"
        name="bronto_cart_fiddle"
        template="Bronto_Cart::fiddle.phtml">
          <arguments>
            <argument name="jsLayout" xsi:type="array">
              <item name="components" xsi:type="array">
                <item name="cart-fiddle" xsi:type="array">
                  <item name="component" xsi:type="string">Bronto_Cart/js/fiddle</item>
                </item>
              </item>
            </argument>
          </arguments>
      </block>
    </referenceContainer>
  </body>
</page>
